<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<DialogPane fx:controller="application.AddRentalRecordController" xmlns:fx="http://javafx.com/fxml/1">
	    <headerText>
        Fill in the information for the new Contact
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Customer ID" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="Customer_Id" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
			
			<Label text="Rent Date" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="RentDate" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
			
            <Label text="Number of Days" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="numOfRentDay" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
        </GridPane>
    </content>
</DialogPane>

